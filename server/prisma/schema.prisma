generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = "postgresql://postgres:postgres@localhost:5432"
}

model User {
    user_id      String  @id @default(cuid())
    user_name    String  @unique
    display_name String
    hash         String
    messages     Message[]
    groups       GroupsOnUsers[]
    icon         Bytes?
}

model Group {
    group_id   String  @id @default(cuid())
    group_name String
    messages   Message[]
    members    GroupsOnUsers[]
}

model GroupsOnUsers {
    user     User   @relation(fields: [user_id], references: [user_id])
    user_id  String
    group    Group  @relation(fields: [group_id], references: [group_id])
    group_id String

    @@id([user_id, group_id])
}

model Message {
    message_id   String   @id @default(cuid())
    message_text String
    author       User     @relation(fields: [author_id], references: [user_id])
    author_id    String
    group        Group    @relation(fields: [group_id], references: [group_id])   
    group_id     String
    time         DateTime @default(now())

    @@index([message_id, group_id])
}